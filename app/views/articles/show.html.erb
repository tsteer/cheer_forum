<div class="card mb-3">
  <div class="card-block px-4 py-2">
    <h1 class="card-title py-2"><%= @article.title %></h1>
    <h2 class="pt-1 pb-2"><%= @article.subheading %></h2>
    <div class="horizontal-space">
      <h3 class="pt-1 pb-2">Written by <%= @article.author %></h3>
      <h3 class="pt-1 pb-2">Published on <%= @article.created_at.to_s.first(-13) %></h3>
    </div>
    <div class="card-text pt-1 pb-2 wysiwyg-content"><%= @article.article_text.html_safe %></div>
  </div>
  <% if current_user && current_user.admin? %>
    <div class="card-footer px-3 py-1 horizontal-space">
      <div><%= link_to 'Edit article', edit_article_path(@article), class: 'card-link' %></div>

      <div><%= link_to 'Delete article', article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' }, class: 'card-link' %></div>
    </div>
  <% end %>
</div>
