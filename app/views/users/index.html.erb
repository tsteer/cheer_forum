<% @users.each do |user| %>
<div class="card mb-3">
    <div class="card-block">
      <div class="row px-3 py-2">
        <div class="col-6 text-lowlight">
          <div><%= user.username %></div>
        </div>
        <div class="col-6 text-lowlight">
          <div><%= user.email %></div>
        </div>
      </div>
      <div class="card-footer px-3 py-1 horizontal-space">
        <div><%= link_to 'Edit user', edit_user_path(user), class: 'card-link' %></div>
        <div><%= link_to 'Delete user', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'card-link'%></div>
      </div>
    </div>
  </div>
<% end %>
