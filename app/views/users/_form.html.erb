<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="card mb-3">
    <div class="card-block px-3 py-2">
      <h1 class="form-group row">
        <%= f.label title, class: 'col-12' %>
      </h1>
      <div class="form-group row justify-content-center">
        <div class="col-9">
          <%= f.text_field :username, placeholder: 'Username', class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="col-9">
          <%= f.text_field :email, placeholder: 'Email', class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="col-9">
          <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="col-9">
          <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.label :date_of_birth, 'Date of birth', class: 'col-5 col-form-label' %>
        <div class="col-4 form-align">
          <%= f.date_select :date_of_birth, start_year: 1920, class: "col-5 form-control" %>
        </div>
      </div>
      <%= f.submit button_label, class: 'btn btn-light btn-lg mt-1' %>
    </div>
  </div>
<% end %>
