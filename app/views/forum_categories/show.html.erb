<h1><%= @forum_category.title %></h1>

<% if current_user.admin? %>
  <p><%= link_to 'Edit category', edit_forum_category_path(@forum_category) %></p>

  <p><%= link_to 'Delete category', forum_category_path(@forum_category), method: :delete, confirm: 'Are you sure you want to delete this category?' %></p>
<% end %>

<% @forum_category.forum_threads.each do |thread| %>
  <p><%= link_to thread.title, forum_thread_path(thread) %></p>
<% end %>
