<div class="card mb-3">
  <div class="card-block px-3 py-2">
    <h1 class="card-title"><%= @forum_category.title %></h1>
  </div>
  <% if current_user && current_user.admin? %>
    <div class="card-footer px-3 py-1">
      <%= link_to 'Edit category', edit_forum_category_path(@forum_category), class: 'card-link' %>

      <%= link_to 'Delete category', forum_category_path(@forum_category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }, class: 'card-link' %>
    </div>
  <% end %>
</div>
<div class="card mb-2">
  <div class="card-block px-3 py-3">
    <%= link_to 'Start a new thread', new_forum_thread_path, class: 'card-link' %>
  </div>
</div>
<% @forum_category.forum_threads.each do |thread| %>
  <div class="card mb-2">
    <div class="card-block px-3 py-3">
      <%= link_to thread.title, forum_thread_path(thread) %>
    </div>
  </div>
<% end %>
