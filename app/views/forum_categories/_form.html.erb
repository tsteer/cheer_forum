<%= form_for @forum_category do |f| %>
  <div class="card mb-3">
    <div class="card-block px-3 py-4">
      <div class="form-group row">
        <%= f.label :title, 'Title', class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.text_field :title, class: "form-control"  %>
        </div>
      </div>
      <div class="form-group row col-3 ">
        <%= f.submit button_label, class: 'btn btn-light btn-lg mt-1' %>
      </div>
    </div>
  </div>
<% end %>
