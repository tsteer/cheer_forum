<%= form_for @forum_thread do |f| %>
  <div class="card mb-3">
    <div class="card-block px-3 py-2">
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group row">
        <%= f.label :title, 'Title', class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.text_field :title, class: "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :forum_category_id, 'Forum category', class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.collection_select :forum_category_id, ForumCategory.all, :id, :title %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :message, 'Enter your message...', class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.text_field :message, class: "form-control"  %>
        </div>
      </div>
      <%= f.submit button_label, class: 'btn btn-light btn-lg mt-1' %>
    </div>
  </div>
<% end %>
