<h1><%= @forum_thread.title %></h1>
<p><%= link_to 'Delete thread', forum_thread_path(@forum_thread), method: :delete, confirm: 'Are you sure you want to delete this thread?' %></p>

<% @forum_thread.forum_posts.each do |post| %>
  <% next unless post.persisted? %>
  <p><%= post.message %></p>
  <p><%= link_to 'Delete post', forum_post_path(post), method: :delete, confirm: 'Are you sure you want to delete this post?' %></p>
<% end %>

<%= render partial: "forum_posts/form", locals: { button_label: 'Post' } %>
