<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="card mb-3">
    <div class="card-block px-3 py-2">
      <div class="form-group row heading-1">
        <h1>Reset password</h1>
      </div>

      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group row">
        <%= f.label :password, 'Password', class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, 'Password confirmation', class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <%= f.submit 'Update password', class: 'btn btn-light btn-lg mt-1' %>
    </div>
  </div>
<% end %>
