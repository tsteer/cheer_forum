<%= form_for(:session, url: login_path) do |f| %>
  <div class="card">
    <div class="card-block px-3 py-2">
      <h1 class="form-group row justify-content-center">
        Log In
      </h1>
      <div class="form-group row justify-content-center">
        <div class="col-9">
          <%= f.text_field :email, placeholder: 'email@email.com', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <div class="col-9">
          <%= f.password_field :password, placeholder: 'password', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-10 form-align">
          <%= link_to "Forgot Password", new_password_reset_path, class: 'form-link' %>
        </div>
      </div>
      <%= f.submit 'Log In', class: 'btn btn-light btn-lg mt-1' %>
    </div>
  </div>
<% end %>
