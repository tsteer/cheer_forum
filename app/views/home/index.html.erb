<% if @forum_threads %>
  <div class="card mb-2">
    <div class="card-block px-3 pt-1">
      <p class="card-title heading-1">Recent threads</p>
    </div>
  </div>
  <% @forum_threads.each do |thread| %>
    <div class="card mb-2">
      <div class="card-block px-3 py-3">
        <%= link_to thread.title, forum_thread_path(thread) %>
      </div>
    </div>
  <% end %>
<% end %>
<% if @articles %>
  <div class="card mb-2">
    <div class="card-block px-3 pt-1">
      <p class="card-title heading-1">Recent articles</p>
    </div>
  </div>
  <% @articles.each do |article| %>
    <div class="card mb-3">
      <div class="card-block px-3 py-2">
        <%= link_to article.title, article_path(article), class: 'card-title py-2 heading-1' %>
        <p class="card-subtitle pt-1 pb-2 heading-2"><%= article.subheading %></p>
        <p class="card-subtitle pt-1 pb-2 heading-3"><%= article.author %></p>
      </div>
    </div>
  <% end %>
<% end %>
